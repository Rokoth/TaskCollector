{
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "Console" },
            {
              "Name": "RollingFile",
              "Args": {
                "pathFormat": "Logs\\log-{Hour}.txt",
                "fileSizeLimitBytes": 104857600,
                "retainedFileCountLimit": 24,
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
                "buffered": true,
                "flushToDiskInterval": "00:00:10"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "urls": "http://0.0.0.0:5720;https://0.0.0.0:5721",
  "https_port": 5721,
  "ConnectionStrings": {
    "MainConnection": "Server=localhost;Database=task_collector;Username=postgres;Password=postgres"
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1"
    }
  },
  "UseOnlySSL":  false,
  "NotifyOptions": {
    "RunEmailNotify": false,
    "Credentials": {
      "FromEmail": "mymail@gmail.com",
      "FromName": "TaskCollector",
      "FromPassword": "===password===",
      "MailServer": "smtp.gmail.com",
      "Port": 587
    },
    "NotifyRules": [
      {
        "Name": "New",
        "Levels": [
          {
            "FirstTimeNotify": 0,
            "RepeatInterval": 1,
            "NotificationTypeEnum": 1,
            "Order": 1
          },
          {
            "FirstTimeNotify": 24,
            "RepeatInterval": 1,
            "NotificationTypeEnum": 2,
            "Order": 2
          },
          {
            "FirstTimeNotify": 48,
            "RepeatInterval": 1,
            "NotificationTypeEnum": 3,
            "Order": 3
          },
          {
            "FirstTimeNotify": 72,
            "RepeatInterval": 1,
            "NotificationTypeEnum": 4,
            "Order": 4
          }
        ]
      },
      {
        "Name": "Working",
        "Levels": [
          {
            "FirstTimeNotify": 0,
            "RepeatInterval": 1,
