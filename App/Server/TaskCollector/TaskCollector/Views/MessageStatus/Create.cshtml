@model TaskCollector.Contract.Model.MessageStatusCreator

@{
    ViewData["Title"] = "Добавление статуса";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MessageId" class="control-label"></label>
                <input asp-for="MessageId" class="form-control" />
                <span asp-validation-for="MessageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <input asp-for="StatusId" class="form-control" />
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="NextNotifyDate" class="control-label"></label>
                <input asp-for="NextNotifyDate" class="form-control" />
                <span asp-validation-for="NextNotifyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusDate" class="control-label"></label>
                <input asp-for="StatusDate" class="form-control" />
                <span asp-validation-for="StatusDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-dark" id="SaveButton" />
                <a asp-action="Index" class="btn btn-dark" id="BackButton">Вернуться</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
